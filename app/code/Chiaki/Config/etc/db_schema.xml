<?xml version="1.0" ?>
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table comment="chiaki_config Table" engine="innodb" name="chiaki_config"
           resource="default">
        <column comment="Entity Id" identity="true" name="id" nullable="false" padding="6" unsigned="true"
                xsi:type="smallint"/>
        <constraint referenceId="PRIMARY" xsi:type="primary">
            <column name="id"/>
        </constraint>
        <column name="key" nullable="false" xsi:type="varchar" length="64"/>
        <column name="value" nullable="false" xsi:type="text"/>
        <column name="user_id" nullable="false" xsi:type="varchar" length="64"/>
        <column name="store_id" nullable="true" xsi:type="varchar" length="32"/>

        <constraint xsi:type="unique" referenceId="USER_KEY_STORE">
            <column name="user_id"/>
            <column name="key"/>
            <column name="store_id"/>
        </constraint>
    </table>
</schema>
