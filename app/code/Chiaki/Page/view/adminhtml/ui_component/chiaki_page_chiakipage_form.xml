<?xml version="1.0" ?>
<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">chiaki_page_chiakipage_form.chiakipage_form_data_source</item>
        </item>
        <item name="label" translate="true" xsi:type="string">General Information</item>
        <item name="template" xsi:type="string">templates/form/collapsible</item>
    </argument>
    <settings>
        <buttons>
            <button class="Chiaki\Page\Block\Adminhtml\ChiakiPage\Edit\BackButton" name="back"/>
            <button class="Chiaki\Page\Block\Adminhtml\ChiakiPage\Edit\DeleteButton" name="delete"/>
            <button class="Chiaki\Page\Block\Adminhtml\ChiakiPage\Edit\SaveButton" name="save"/>
            <button class="Chiaki\Page\Block\Adminhtml\ChiakiPage\Edit\SaveAndContinueButton" name="save_and_continue"/>
        </buttons>
        <namespace>chiaki_page_chiakipage_form</namespace>
        <dataScope>data</dataScope>
        <deps>
            <dep>chiaki_page_chiakipage_form.chiakipage_form_data_source</dep>
        </deps>
    </settings>
    <dataSource name="chiakipage_form_data_source">
        <argument name="data" xsi:type="array">
            <item name="js_config" xsi:type="array">
                <item name="component" xsi:type="string">Magento_Ui/js/form/provider</item>
            </item>
        </argument>
        <settings>
            <submitUrl path="*/*/save"/>
        </settings>
        <dataProvider class="Chiaki\Page\Model\ChiakiPage\DataProvider" name="chiakipage_form_data_source">
            <settings>
                <requestFieldName>chiakipage_id</requestFieldName>
                <primaryFieldName>chiakipage_id</primaryFieldName>
            </settings>
        </dataProvider>
    </dataSource>
    <fieldset name="general">
        <settings>
            <label>General</label>
        </settings>
        <field formElement="select" name="type" sortOrder="10">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">ChiakiPage</item>
                </item>
            </argument>
            <settings>
                <label translate="true">type</label>
                <dataScope>type</dataScope>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">false</rule>
                </validation>
            </settings>
            <formElements>
                <select>
                    <settings>
                        <options class="Chiaki\Page\Model\ChiakiPage\Source\Type"/>
                    </settings>
                </select>
            </formElements>
        </field>
        <field formElement="textarea" name="config_data" sortOrder="20">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">ChiakiPage</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <label translate="true">config_data</label>
                <dataScope>config_data</dataScope>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">false</rule>
                </validation>
            </settings>
        </field>
        <field formElement="input" name="store_id" sortOrder="40">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">ChiakiPage</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <label translate="true">store_id</label>
                <dataScope>store_id</dataScope>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">false</rule>
                </validation>
            </settings>
        </field>
        <field formElement="input" name="user_id" sortOrder="50">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">ChiakiPage</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <label translate="true">user_id</label>
                <dataScope>user_id</dataScope>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">false</rule>
                </validation>
            </settings>
        </field>
        <field formElement="input" name="url" sortOrder="60">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">ChiakiPage</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <label translate="true">url</label>
                <dataScope>url</dataScope>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">false</rule>
                </validation>
            </settings>
        </field>
        <field formElement="textarea" name="addition_data" sortOrder="70">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">ChiakiPage</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <label translate="true">addition_data</label>
                <dataScope>addition_data</dataScope>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">false</rule>
                </validation>
            </settings>
        </field>
    </fieldset>
</form>
